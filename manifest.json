{
  "manifest_version": 3,
  "name": "Lexia",
  "version": "2.1",
  "description": "Professional GDPR & Privacy Audit Toolkit. Scans fonts, trackers, CDNs, cookies, and more.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lexia v2.1"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}